/* pages/goods_list/goods_list.wxss */
@import '/miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss';
.goods{
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column ;
}
.goods_item{
  width: 100%;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #ccc;
  padding: 10rpx 0;
}
.goods_item .goods_item_l{
  flex:2;
  display: flex;
  justify-content: center;
  align-items: center;

}
.goods_item .goods_item_l image{
  width: 70%;
}
.goods_item .goods_item_r{
  flex:3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_name{
  display: -webkit-inline-box;
  overflow: hidden;
  box-orient: vertical;
  text-overflow: ellipsis;
  line-clamp: 2;
  font-size: 26rpx;
}
.goods_price{
  color: rgb(243, 91, 88);
}
.floor{
  width: 100%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
}